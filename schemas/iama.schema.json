---
title: IAMA schema json (NL)
description: schema.json bestand voor IAMA
---
{% assign iama-fraia = site.data.iama-fraia %}
{
    "$id": "https://standaard.algoritmeregister.org/schemas/iama.schema.json",
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "title": "{{ iama-fraia.title.nl }}",
    "description": "{{ schema.description.nl }}",
    "type": "object",
    "properties": {
        "name": {
            "name": "Naam",
            "category": "CATALOGUSINFORMATIE",
            "type": "string",
            "description": "Wat de naam die gebruikt wordt om dit algoritme aan te duiden? Voorbeeld: 'WMO voorspelling Rotterdam' of 'Crowd-monitoring Enschede'.",
            "required": true
        },
        "organization": {
            "name": "Organisatie",
            "category": "CATALOGUSINFORMATIE",
            "type": "string",
            "description": "Wat is de volledige naam van de organisatie verantwoordelijk voor de inzet van het model, algoritme of AI? Voorbeeld: 'Gemeente Amsterdam' of 'Waterschap Limburg'.",
            "required": true
        },
        "department": {
            "name": "Afdeling",
            "category": "CATALOGUSINFORMATIE",
            "type": "string",
            "description": "Wat is de volledige naam van de afdeling of divisie verantwoordelijk voor de inzet van het model, algoritme of AI? Voorbeeld: 'Stadsdeel Segbroek' of 'Verkeer en Transport'.",
            "required": true
        },
        "description_short": {
            "name": "Korte omschrijving",
            "category": "CATALOGUSINFORMATIE",
            "type": "string",
            "description": "Geef een korte omschrijving van maximaal 150 karakters waarin hoog over omschreven wordt wat het doel is van het model, algoritme of AI. Voorbeeld: 'Algoritme dat bij stoplichten voorrang van verkeersmodaliteiten berekent op basis van wetgeving en lokale voorschriften.",
            "required": true
        },
        "status": {
            "name": "Status",
            "category": "CATALOGUSINFORMATIE",
            "type": "string",
            "description": "Geef aan of het model, algoritme of AI in ontwikkeling is, in gebruik, of buiten gebruik.",
            "required": false
        },
        "revision_date": {
            "name": "Herzieningsdatum",
            "category": "CATALOGUSINFORMATIE",
            "type": "string",
            "description": "Dit is de datum waarvoor deze registratie moet worden herzien.",
            "required": true
        },
        {% for chapter in iama-fraia.content %}
        {% for section in chapter.content %}
        {% for question in section.content %}
            "{{ question.title.nl }}": {
                "name": "{{ section.subtitle.nl }}",
				"category": "{{ chapter.subtitle.nl }}",
				"type": "string",
				"description": "{{ question.description.nl }}",
				"required": {{ property.required | default: false }}
            }{% if forloop.last == false %},{% endif %}
        {% endfor %}{% if forloop.last == false %},{% endif %}
        {% endfor %}{% if forloop.last == false %},{% endif %}
        {% endfor %}
    }
}
